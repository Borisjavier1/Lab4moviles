<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:clickable="true"
                                                   android:background="@drawable/custom_ripple"
                                                   android:foreground="?attr/selectableItemBackground"
                                                   android:orientation="horizontal" android:textDirection="locale"
                                                   android:textAlignment="viewStart">

    <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/carr" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/tvNombre"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            tools:layout_editor_absoluteY="7dp"
            app:layout_constraintStart_toEndOf="@+id/ivFoto" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textAlignment="center"/>
    <Button
            android:text="Cursos"
            android:layout_width="76dp"
            android:layout_height="36dp" android:id="@+id/vercursos" tools:layout_editor_absoluteY="5dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952" android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>