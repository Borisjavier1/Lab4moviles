<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMatriculaFragment">

    <EditText
            android:id="@+id/exitText_Estado"
            android:layout_width="300dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:ems="10"
            android:hint="Estado"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:editable="false"/>
    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            app:layout_constraintTop_toBottomOf="@+id/exitText_Nota"
            app:layout_constraintStart_toStartOf="@+id/exitText_Estado" android:layout_marginTop="24dp"/>
    <TextView
            android:id="@+id/textView_accionPersona"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Editar Nota"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/exitText_Nota"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Nota"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:editable="true"/>
    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nota"
            app:layout_constraintTop_toBottomOf="@+id/editText_est"
            app:layout_constraintStart_toStartOf="@+id/exitText_Nota"/>
    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cédula de estudiante"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Group"
            app:layout_constraintStart_toStartOf="@+id/editText_est"/>
    <EditText
            android:id="@+id/editText_est"
            android:layout_width="300dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Cédula de estudiante"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:editable="false"/>
    <TextView
            android:id="@+id/textView5"
            android:layout_width="133dp"
            android:layout_height="21dp"
            android:layout_marginTop="80dp"
            android:text="Código de grupo"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView_accionPersona"
            app:layout_constraintStart_toStartOf="@+id/editText_Group"/>
    <EditText
            android:id="@+id/editText_Group"
            android:layout_width="300dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Código de grupo"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.405"
    />
    <Button
            android:id="@+id/btn_guardarPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="Guardar Nota"
            app:layout_constraintEnd_toEndOf="@+id/exitText_Nota"
            app:layout_constraintTop_toBottomOf="@+id/exitText_Nota" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="Volver"
            app:layout_constraintStart_toStartOf="@+id/exitText_Nota"
            app:layout_constraintTop_toBottomOf="@+id/exitText_Nota" android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>